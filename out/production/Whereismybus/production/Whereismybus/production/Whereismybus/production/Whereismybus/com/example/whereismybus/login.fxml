<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.whereismybus.LoginController">
   <children>
      <Label layoutX="525.0" layoutY="175.0" text="로그인">
         <font>
            <Font name="HYPost-Light" size="50.0" />
         </font>
      </Label>
      <TextField fx:id="id" layoutX="393.0" layoutY="302.0" prefHeight="40.0" prefWidth="300.0" promptText="아이디" styleClass="textfield">
         <font>
            <Font size="20.0" />
         </font></TextField>
      <PasswordField fx:id="pw" layoutX="394.0" layoutY="350.0" prefHeight="40.0" prefWidth="300.0" promptText="비밀번호" styleClass="textfield">
         <font>
            <Font size="20.0" />
         </font></PasswordField>
      <Button fx:id="loginBtn" layoutX="711.0" layoutY="302.0" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="108.0" styleClass="loginBtn" text="로그인">
         <font>
            <Font name="HYPost-Light" size="20.0" />
         </font>
      </Button>
      <Button fx:id="goMainBtn" layoutX="711.0" layoutY="350.0" mnemonicParsing="false" onAction="#goMainScene" prefHeight="40.0" prefWidth="108.0" styleClass="goMainBtn" text="홈으로">
         <font>
            <Font name="HYPost-Light" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
