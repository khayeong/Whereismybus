<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.whereismybus.SignupController">
   <children>
      <Label layoutX="500.0" layoutY="175.0" text="회원가입">
         <font>
            <Font name="HYPost-Light" size="50.0" />
         </font>
      </Label>
       <TextField fx:id="id" layoutX="400.0" layoutY="260.0" prefHeight="40.0" prefWidth="400.0" promptText="아이디" styleClass="textfield">
           <font>
               <Font size="20.0" />
           </font></TextField>
      <TextField fx:id="name" layoutX="400.0" layoutY="360.0" prefHeight="30.0" prefWidth="400.0" promptText="이름" styleClass="textfield">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <PasswordField fx:id="pw" layoutX="400.0" layoutY="310.0" prefHeight="30.0" prefWidth="400.0" promptText="비밀번호" styleClass="textfield">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
      <Button fx:id="SignupButton" layoutX="487.0" layoutY="436.0" mnemonicParsing="false" onAction="#insertMember" styleClass="signupBtn" text="회원가입">
         <font>
            <Font name="HYPost-Light" size="20.0" />
         </font></Button>
      <Button fx:id="goMainBtn" layoutX="606.0" layoutY="436.0" mnemonicParsing="false" onAction="#goMainScene" prefHeight="35.0" prefWidth="108.0" styleClass="goMainBtn" text="홈으로">
         <font>
            <Font name="HYPost-Light" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
